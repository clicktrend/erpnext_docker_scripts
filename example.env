# ERPNEXT CUSTOM
ERPNEXT_CUSTOM_IMAGE=ghcr.io/user/repo/custom
ERPNEXT_CUSTOM_TAG=1.0.0
ERPNEXT_CUSTOM_APPS_JSON_FILE="apps.json"
