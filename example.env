INSTALLED=true
CONFIGS_DIR=".configs"
FRAPPE_DOCKER_DIR=".frappe_docker"

# TRAEFIK
TRAEFIK_PROJECT_NAME="traefik"
TRAEFIK_TARGET_ENV_FILE="$CONFIGS_DIR/traefik.env"
TRAEFIK_COMPOSE_FILE_1="$FRAPPE_DOCKER_DIR/overrides/compose.traefik.yaml"
TRAEFIK_COMPOSE_FILE_2="$FRAPPE_DOCKER_DIR/overrides/compose.traefik-ssl.yaml"

# MARIADB
MARIADB_TARGET_ENV_FILE="$CONFIGS_DIR/mariadb.env"
