MARIADB_COMPOSE_FILE_1="$FRAPPE_DOCKER_DIR/overrides/compose.mariadb-shared.yaml"

# ERPNEXT
ERPNEXT_PROJECT_NAME="erpnext"
ERPNEXT_EXAMPLE_SOURCE_FILE="$FRAPPE_DOCKER_DIR/example.env"
ERPNEXT_TARGET_ENV_FILE="$CONFIGS_DIR/erpnext.env"
